    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "clean-css-cli": "^4.1.10",
    "concat": "^1.0.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.11.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "uglify-js": "^3.1.7",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  }
}
